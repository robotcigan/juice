.form-control
  border 1px solid transparent
  display block
  height 5rem
  margin-bottom 2rem
  padding-left 1rem
  width 100%
  // &:hover
  //   border-color $light-gray
  &:focus
    border-color $primary

textarea.form-control
  height 15rem

.btn
  background-color $primary
  border 0
  border-radius 24px
  color #fff
  cursor pointer
  display inline-block
  font-size 1.4rem
  font-weight 600
  letter-spacing .5px
  line-height  4.2rem
  text-align center
  text-decoration none
  text-transform uppercase
  transition background-color .2s
  width 17rem
  &:hover
    background-color #924332
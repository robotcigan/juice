.card
  animation fadeUp 1s forwards
  background-color #fff
  border-radius $radius
  opacity 0
  margin-bottom 4rem
  min-height 26rem
  padding 2rem 3rem
  width 100%
  &__content
    min-height 26rem
    padding 2rem 3rem
  &--images
    position relative
  &__img
    display block
    background-size cover
    background-position 30%
    margin 0
    height 26rem
    width 100%
    &--bottom
      border-radius  0 0 $radius $radius
      bottom 0
      position absolute
    &--top
      border-radius $radius $radius 0 0
    img
      display none
  &--main
    animation fadeUp 1s .5s forwards
    display none
    background-color rgba(#fff, .9)
    opacity 0
    // height 36.5rem
    // margin-top -50%
    padding 3rem 2rem
    // position relative
    // top 18rem
    // margin-top -8rem
    margin-bottom 4rem
    &.active
      display block
    .header--h1
      margin-bottom 2rem
      font-size 3.4rem
    p:last-child
      margin-bottom 0
    .small-packs--special
      margin-left 0
  &--images
    padding 0
  &--small
    min-height 14rem
  &--contacts
    position relative
    .btn
      bottom 3rem
      left 0
      margin auto
      position absolute
      right 0
  p
    margin 0
    margin-bottom 3rem
  &--without-icons
    // height 26rem
    // top 21rem
    // max-width 88%
    max-width 88%




.recipe
  background-size cover !important
  position relative
  .btn
    bottom 2rem
    position absolute
  .header
    color #fff

.about-text
  color $primary
  font-size 1.8rem
  margin 0

.index-contact
  background #fff url('../../img/contacts-img.jpg') no-repeat
  background-position-x 100%
  background-size contain
  &__row
    display block
    margin-bottom 1rem
    &:last-child
      margin-bottom 0
  strong
    float left
    margin-right .5rem

.document-slider
  .document
    padding .5rem 2rem
  img
    max-width 100%
  .slick-prev,
  .slick-next
    &:before
      content '\f105'
      color $main
      font-family 'FontAwesome'
  .slick-prev
    &:before
      content '\f104'

.exposition
  &__slide
    opacity 0
    display none
    transition .2s
    &.active
      display block
      opacity 1

.open-modal
  display block
  height 100%
  width 100%
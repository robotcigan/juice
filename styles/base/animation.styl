@keyframes fadeUp
  0%
    opacity 0
    transform translateY(10px)
  100%
    opacity 1
    transform none

@keyframes fadeDown
  0%
    opacity 0
    transform translateY(-10px)
  100%
    opacity 1
    transform none

@keyframes fadeLeft
  0%
    opacity 0
    transform translateX(-10px)
  100%
    opacity 1
    transform none
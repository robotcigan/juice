.bg
  background url('../../img/bg.jpg') center 12%
  min-height 100vh


.action
  margin-bottom -42rem
  margin-left 4rem
  margin-top 12rem
  height 100vh
  position relative
  &__left,
  &__right
    display none
    color #fff
    font-size 8rem
    position absolute
    top 5%
    z-index 100
  &__left
    left 0
  &__right
    right 0
.juice-pack
  // animation fadeDown 1s ease
  animation fadeLeft 1s ease
  bottom 49rem
  left 12rem
  height 44rem
  position absolute
  width 18rem
  z-index 50
  &.packs
    bottom 49rem
    height 43rem
    left 5rem
  img
    max-height 100%

.fruit
  animation fadeLeft 1.2s ease
  bottom 45rem
  left 13rem
  position absolute
  width 32rem
  z-index 100
  text-align center
  img
    max-width 100%

.stump
  background url('../../img/stump.png') no-repeat
  background-size contain
  bottom 29rem
  display block
  height 30rem
  position absolute
  width 60rem
  z-index 1
.date
  color $gray
  display inline-block
  line-height 1
  margin 0
  margin-bottom .5rem


.taste-container
  padding-top 0
  position relative
  z-index 50
  width 100%

.taste-choice
  align-items flex-end
  background-color #fff
  border-radius $radius
  display flex
  height 14.8rem
  justify-content space-around
  margin-bottom 4rem
  padding 0 1rem
  padding-bottom 4.3rem
  padding-top 0
  width 100%
  .taste
    display inline-block
    cursor pointer
    position relative
    text-align center
    user-select none
    width 100%
    &:after
      background url('../../img/fruit-shadow.png') no-repeat
      background-size cover
      bottom -5px
      content ''
      left -.5rem
      margin 0 auto
      right 0
      height 1rem
      position absolute
      transition opacity .5s
      width 6rem
    &:hover
      position relative
      transform translateY(3.3rem)
      .taste__name
        display block
      &:after
        opacity .3
      img
        transform translateY(-6px)
    img
      max-width 100%
      transition transform .4s
    &__name
      display none
      position relative
      background-color $apple
      border-radius 30px
      color #fff
      font-size 1.1rem
      font-weight 500
      font-family $customFont
      letter-spacing 1px
      margin-bottom 4px
      padding .6rem .2rem
      text-transform uppercase
      z-index 5
    &.active
      position relative
      transform translateY(3.3rem)
      img
        transform translateY(-6px)
      // &:hover
      //   img
      //     transform none
      &:before
        content ''
        border-radius 50%
        border 1px solid $apple
        bottom 2rem
        circle(11rem)
        display block
        left 1.2rem
        position absolute
        z-index 0
      &:after
        display none
      .taste__name
        display block
    tasteChoise('cherry', $cherry)
    tasteChoise('orange', $orange)
    tasteChoise('apple', $apple)
    tasteChoise('carrot', $carrot)
    tasteChoise('peach', $peach)
    tasteChoise('grapes', $grapes)
    tasteChoise('pumpkit', $pumpkit)
    tasteChoise('tomato', $tomato)
    tasteChoise('mix', $mix)


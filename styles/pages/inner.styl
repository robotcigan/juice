.juice-slider-nav
  .slide
    cursor pointer
    height 36rem
    padding 4.2rem 2rem
    img
      max-height 100%
      transition transform .4s
      &:hover
        transform scale(1.05)
  .slick-center
    img
      transform scale(1.3)
      &:hover
        transform scale(1.3)
  &-left,
  &-right
    background #fff
    cursor pointer
    padding 3rem 2rem
    position absolute
    text-align center
    top 30rem
    .fa
      transition transform .2s ease
  &-left
    border-radius 0 $radius $radius 0
    left 0
    &:hover
      .fa
        transform translateX(-5px)
  &-right
    border-radius $radius 0 0 $radius
    right 0
    &:hover
      .fa
        transform translateX(5px)




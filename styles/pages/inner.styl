
.video
  margin-bottom 5rem
  &__title
    color $primary
  img
    max-width 100%

.inner-card
  background #fff
  border-radius $radius
  display block
  margin-bottom 5rem
  clearfix()
  &__img
    background-size cover
    background-position 0
    border-radius $radius 0 0 $radius
    float left
    height 30rem
    overflow hidden
    width 40%
  &__content
    float left
    height 30rem
    padding 2rem 3rem
    position relative
    width 60%
  &__header
    color $primary
    display inline-block
    width initial
  &__btn
    position absolute
    bottom 2rem
    right 2rem

.offset
  margin-bottom 5rem

.time
  color $gray

.btn-group
  display flex
  justify-content space-between

.pagination
  text-align center
  &__link
    background transparent
    border 1px solid $primary
    border-radius 50%
    display inline-block
    margin-right 1rem
    text-align center
    &--active
      background-color #fff
    &:hover
      background-color #fff
    a
      color $primary
      display inline-block
      line-height 4rem
      height 4rem
      font-weight 600
      text-decoration none
      width 4rem

.float-img
  float right
  margin-left 4rem
  margin-bottom 4rem
  max-width 100%


.small-packs
  .pack
    position relative
  &__big
    background url('../../img/big-pack-contur.png') no-repeat
    background-size contain
    display block
    height 13rem
    width 4rem
  &__small
    background url('../../img/small-pack-contur.png') no-repeat
    background-size contain
    display block
    height 7rem
    width 3rem
  span
    position absolute
    bottom -20px
    left 0
    right 0


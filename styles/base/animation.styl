@keyframes fadeUp
  0%
    opacity 0
    filter: blur(2px)
    transform translateY(10px)
  100%
    opacity 1
    transform none

@keyframes fadeDown
  0%
    opacity 0
    transform translateY(-10px)
  100%
    opacity 1
    transform none

@keyframes fadeLeft
  0%
    opacity .5
    filter: blur(5px)
    transform translateX(-15%)
  100%
    opacity 1
    transform none

@keyframes fadeLeftMobile
  0%
    opacity .5
    filter: blur(5px)
  100%
    opacity 1